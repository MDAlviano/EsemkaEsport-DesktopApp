<Window x:Class="EsemkaEsportApp.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsemkaEsportApp"
        mc:Ignorable="d"
        Title="LoginForm" Height="350" Width="1040" Background="#FF190345" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Left" Margin="55,51,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" FontWeight="SemiBold"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="55,121,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="129,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Background="#FF49376D" Height="22" BorderBrush="#FF6C549B" Foreground="White" BorderThickness="1,1,1,1"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="57,161,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="129,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Background="#FF49376D" Height="20" BorderBrush="#FF6C549B"/>
        <CheckBox Content="Show Password" HorizontalAlignment="Left" Margin="131,195,0,0" VerticalAlignment="Top" Background="#FF6D2EA8" BorderBrush="{x:Null}" Foreground="White"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="324,218,0,0" VerticalAlignment="Top" Width="73" BorderBrush="{x:Null}" Background="#FF49376D" Foreground="White" Height="23"/>
        <Label Content="Don't have any account?" HorizontalAlignment="Left" Margin="57,279,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>
        <Button Content="Create One" Click="ToCreateAccountForm_Click" HorizontalAlignment="Left" Margin="193,282,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBCABDF" BorderBrush="{x:Null}"/>
        <Image HorizontalAlignment="Left" Height="337" Margin="490,0,0,0" VerticalAlignment="Top" Width="550" Source="/Images/Esemka-Esport-Desktop.png"/>
    </Grid>
</Window>
