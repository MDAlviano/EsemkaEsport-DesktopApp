<Window x:Class="EsemkaEsportApp.ScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsemkaEsportApp"
        mc:Ignorable="d"
        Title="ScheduleForm" Height="450" Width="870" WindowStartupLocation="CenterScreen" Background="#190345">
    <Grid>

        <Label Content="Schedule" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="0,25,35,0" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Image Source="/Images/Team.png" Height="38" Margin="0,0,10,0" />
            <Image Source="/Images/Player.png" Height="38" Margin="0,0,10,0"/>
            <Image Source="/Images/Logout.png" Height="38"/>
        </StackPanel>

        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="35,94,35,97"/>
        <Button Content="Create New" Click="Check_Click" Background="#FF49376D" BorderBrush="{x:Null}" Foreground="White" HorizontalAlignment="Right" Margin="0,370,35,0" Padding="35,8" VerticalAlignment="Top"/>

    </Grid>
</Window>
