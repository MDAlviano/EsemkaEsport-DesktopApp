<Window x:Class="EsemkaEsportApp.MyTicketForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsemkaEsportApp"
        mc:Ignorable="d"
        Title="MyTicketForm" Height="450" Width="870" WindowStartupLocation="CenterScreen" Background="#190345">
    <Grid>

        <Button Content="Back" Click="BackButton_Click" Foreground="White" FontSize="16" HorizontalAlignment="Left" Height="30" Width="100" Margin="35,28,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.425,1.151" Background="#FF49376D" BorderBrush="{x:Null}" />
        <Label Content="Schedule" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>
        
        <!-- datagrid_detail -->
        <DataGrid x:Name="scheduleDetailDataGrid" Width="790" Height="270"/>

    </Grid>
</Window>
