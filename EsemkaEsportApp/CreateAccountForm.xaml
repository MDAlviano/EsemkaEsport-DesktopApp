<Window x:Class="EsemkaEsportApp.CreateAccountForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsemkaEsportApp"
        mc:Ignorable="d"
        Title="CreateAccountForm" Height="400" Width="600" Background="#FF190345" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Images/Esemka-Esport-Desktop.png"/>
        <GroupBox Header="Your Information" Margin="66,58,66,58" Background="#FF190345" Foreground="White" FontSize="20" FontWeight="Bold"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="92,102,0,0" VerticalAlignment="Top" Foreground="White" />
        <RadioButton Content="Male" Foreground="White" HorizontalAlignment="Left" Margin="203,134,0,236"/>
        <RadioButton Content="Female" Foreground="White" HorizontalAlignment="Left" Margin="255,134,0,236"/>
        <Label Content="Gender" HorizontalAlignment="Left" Margin="92,128,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="203,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" Background="#FF49376D" Height="22" BorderBrush="#FF6C549B" Foreground="White" BorderThickness="1,1,1,1"/>
        <Label Content="Birthdate" HorizontalAlignment="Left" Margin="92,154,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="92,186,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" Background="#FF49376D" Height="22" BorderBrush="#FF6C549B" Foreground="White" BorderThickness="1,1,1,1" Margin="203,189,0,0"/>
        <Label Content="Retype Password" HorizontalAlignment="Left" Margin="92,222,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" Background="#FF49376D" Height="22" BorderBrush="#FF6C549B" Foreground="White" BorderThickness="1,1,1,1" Margin="203,224,0,0"/>
        <Button Content="Register" HorizontalAlignment="Left" Margin="431,275,0,0" VerticalAlignment="Top" Width="73" BorderBrush="{x:Null}" Background="#FF49376D" Foreground="White" Height="23"/>
        <DatePicker HorizontalAlignment="Left" Height="22" Width="301" Margin="203,158,0,304"/>
        <Label Content="Already have an account? " HorizontalAlignment="Left" Margin="215,345,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>
        <Button Content="Login" Click="ToLoginForm_Click" HorizontalAlignment="Left" Margin="355,348,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBCABDF" BorderBrush="{x:Null}"/>
    </Grid>

</Window>
