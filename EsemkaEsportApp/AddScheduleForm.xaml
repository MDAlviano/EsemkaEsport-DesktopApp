<Window x:Class="EsemkaEsportApp.AddScheduleForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Schedule" Height="400" Width="470" Background="#190245">
    <Grid Margin="10">
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="50"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Home Team -->
            <RowDefinition Height="20"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Away Team -->
            <RowDefinition Height="20"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Time -->
            <RowDefinition Height="50"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Label -->
            <ColumnDefinition Width="*"/>
            <!-- Input -->
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Grid.ColumnSpan="2" 
               Content="Add Schedule" 
               Foreground="White" 
               FontSize="25" 
               FontWeight="SemiBold" 
               HorizontalAlignment="Center" 
               Margin="0,10"/>

        <!-- Home Team -->
        <Label Grid.Row="2" Grid.Column="0" 
               Content="Home Team" 
               Foreground="White" 
               FontSize="16" 
               VerticalAlignment="Center" 
               Margin="0,0,15,0"/>
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  Width="270" 
                  Height="30" 
                  VerticalAlignment="Center">
            <ComboBoxItem Content="Team 1"/>
            <ComboBoxItem Content="Team 2"/>
            <ComboBoxItem Content="Team 3"/>
            <ComboBoxItem Content="Team 4"/>
        </ComboBox>

        <!-- Away Team -->
        <Label Grid.Row="4" Grid.Column="0" 
               Content="Away Team" 
               Foreground="White" 
               FontSize="16" 
               VerticalAlignment="Center" 
               Margin="0,0,15,0"/>
        <ComboBox Grid.Row="4" Grid.Column="1" 
                  Width="270" 
                  Height="30" 
                  VerticalAlignment="Center">
            <ComboBoxItem Content="Team 1"/>
            <ComboBoxItem Content="Team 2"/>
            <ComboBoxItem Content="Team 3"/>
            <ComboBoxItem Content="Team 4"/>
        </ComboBox>

        <!-- Time -->
        <Label Grid.Row="6" Grid.Column="0" 
               Content="Time" 
               Foreground="White" 
               FontSize="16" 
               VerticalAlignment="Center" 
               Margin="0,0,15,0"/>
        <DatePicker Grid.Row="6" Grid.Column="1" 
                    Width="270" 
                    Height="30" 
                    VerticalAlignment="Center" 
                    FontSize="14"/>

        <!-- Add Button -->
        <Button Grid.Row="8" Grid.ColumnSpan="2" 
                Content="Add" 
                FontSize="15" 
                Width="400" 
                Padding="0,10" 
                Foreground="White" 
                Background="#FF49376D" 
                BorderThickness="0" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="AddSchedule_Click"/>
    </Grid>
</Window>
