<Window x:Class="EsemkaEsportApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EsemkaEsportApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="870" WindowStartupLocation="CenterScreen" Background="#190345">
    <Grid>

        <Label Content="Schedule" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>
        <Button Click="LogoutButton_Click" HorizontalAlignment="Right" Height="40" Margin="0,28,35,0" VerticalAlignment="Top" RenderTransformOrigin="0.425,1.151" Background="{x:Null}" BorderBrush="{x:Null}" >
            <Image Source="/Images/Logout.png"/>
        </Button>
        <!-- Datagrid -->
        <DataGrid x:Name="scheduleDataGrid" RowBackground="#FF49376D" AlternatingRowBackground="#FF49376D" AutoGenerateColumns="False" IsReadOnly="True" Margin="35,95">
            <DataGrid.Resources>
                <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#190345"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ColumnHeaderStyle>
                <StaticResource ResourceKey="HeaderStyle"/>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Match" Binding="{Binding Match}" Width="*"/>
                <DataGridTextColumn Header="Time" Binding="{Binding Time}" Width="*"/>
                <DataGridTemplateColumn Header="Action" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Book" Click="Check_Click" Background="#FFBCA8DF" Foreground="White" BorderThickness="0" BorderBrush="{x:Null}" Margin="5,0"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="My Tickets" Click="Check_Click" Background="#FF49376D" Foreground="White" BorderBrush="{x:Null}" HorizontalAlignment="Right" Margin="0,366,35,0" Padding="35,8" VerticalAlignment="Top"/>


    </Grid>
</Window>
